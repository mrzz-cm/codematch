<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:gravity="left"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/currentlyMatched2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not matched yet"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/question_title"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text = "sample title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/question_text"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_weight="0.4"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided No message provided "
        android:textSize="17sp"
        android:scrollbars = "vertical" />

    <ImageView
        android:id="@+id/question_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:minWidth="500dp"
        android:src="@drawable/image_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:weightSum="100"
        >

        <Button
            android:id="@+id/delete_question"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="48"
            android:minHeight="250dp"
            android:text="Delete my question"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>